<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="me.cvhc.equationsolver.MainActivity">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"
        android:id="@+id/dummyFocus"
        android:orientation="horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutEquation"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/listViewVariables"
        android:layout_alignStart="@+id/listViewVariables">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView"
            android:background="@android:drawable/ic_menu_help"
            android:layout_margin="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textViewEquation"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:hint="Enter the equation here"
            android:background="@android:drawable/edit_text" />
    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/listViewVariables"
        android:fadeScrollbars="false"
        android:choiceMode="singleChoice"
        android:background="@drawable/border_ui"
        android:layout_below="@+id/linearLayoutEquation"
        android:layout_above="@+id/relativeLayout" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_above="@+id/buttonSolve">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:id="@+id/buttonPlot"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Search from"
            android:id="@+id/labelSearchFrom"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="4dp" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            android:id="@+id/textLower"
            android:padding="2dp"
            android:textSize="14sp"
            android:layout_alignTop="@+id/labelSearchFrom"
            android:layout_toRightOf="@+id/labelSearchFrom"
            android:layout_toEndOf="@+id/labelSearchFrom"
            android:layout_alignBottom="@+id/labelSearchFrom"
            android:hint="-1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="to"
            android:id="@+id/labelSearchTo"
            android:layout_below="@+id/textLower"
            android:layout_toLeftOf="@+id/textLower"
            android:layout_toStartOf="@+id/textLower"
            android:layout_margin="4dp"  />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="textNoSuggestions"
            android:id="@+id/textUpper"
            android:padding="2dp"
            android:textSize="14sp"
            android:layout_alignTop="@+id/labelSearchTo"
            android:layout_toRightOf="@+id/labelSearchTo"
            android:layout_toEndOf="@+id/labelSearchTo"
            android:layout_alignBottom="@+id/labelSearchTo"
            android:hint="+1.0" />
    </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Solve"
        android:id="@+id/buttonSolve"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
